<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.natalizioapps.monsignordoyle.ui.views.AvatarListItem
        android:id="@+id/module_phone_school"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_button_grey"
        app:avatarColor="@color/material_green_500"
        app:avatarSrc="@drawable/ic_phone"
        app:textMain="@string/about_phone_title"/>

    <View
        android:id="@+id/module_phone_div_phone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="72dp"
        android:background="@color/divider"/>

    <com.natalizioapps.monsignordoyle.ui.views.AvatarListItem
        android:id="@+id/module_phone_attendance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_button_grey"
        app:avatarColor="@color/material_green_500"
        app:avatarSrc="@drawable/ic_phone"
        app:textMain="@string/about_attendance"/>

    <View
        android:id="@+id/module_phone_div_attendance"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="72dp"
        android:background="@color/divider"/>

    <com.natalizioapps.monsignordoyle.ui.views.AvatarListItem
        android:id="@+id/module_phone_hours"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_button_grey"
        app:avatarColor="@color/material_amber_500"
        app:avatarSrc="@drawable/ic_clock"
        app:textMain="@string/about_office"/>

    <View
        android:id="@+id/module_phone_div_hours"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="72dp"
        android:background="@color/divider"/>

</LinearLayout>